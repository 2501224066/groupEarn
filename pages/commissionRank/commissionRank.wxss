.list {
  border-top: 20rpx solid #f8f8f8;
  padding: 0 50rpx;
}

.list>.li {
  padding: 40rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ececec;
}

.list>.li>.img {
  width: 41.6rpx;
  height: 58rpx;
  padding-right: 30rpx;
  border-right: 1rpx solid #ececec;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.list>.li>.img>.num {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  font-weight: 500;
  background: #e6e6e6;
}

.list>.li>.header {
  width: 86rpx;
  height: 86rpx;
  border-radius: 43rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.list>.li>.img2 {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  line-height: 0;
}

.list>.li>.name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
}

.list>.li>.text {
  color: #F93C4C;
  font-size: 24rpx;
}
