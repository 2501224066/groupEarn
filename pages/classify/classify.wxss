.classify {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
}

.search {
  height: 5vh;
  background: #f3f5fa;
  padding: 17rpx 34rpx;
}

.search>.box {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 100rpx;
  background: #fff;
  font-size: 25rpx;
}

.search>.box>.img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.search>.box>.ipt {
  flex: 1;
}

.search>.box .input {
  width: 100%;
}

.search>.box .placeholder {
  color: #A7A7A7;
}

.content {
  height: 95vh;
  display: flex;
  justify-content: space-between;
}

.content>.tab {
  width: 164rpx;
  background: #f3f5fa;
  color: #6E6E6E;
}

.content>.tab>.item {
  text-align: center;
  padding: 30rpx 0;
}

.content>.tab>.sel {
  text-align: center;
  padding: 30rpx 0;
  color: #F93C4C;
  background: #fff;
  font-weight: 800;
}

.content>.r {
  flex: 1;
  padding: 0 17rpx;
}

.content>.r>.two {
  height: 7vh;
  font-size: 25rpx;
  color: #6E6E6E;
  background: #fff;
  line-height: 7vh;
  border-bottom: 1rpx solid #ececec;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  overflow-x: auto;
}

.content>.r>.two {
  display: flex;
  align-items: center;
  overflow-x: auto;
}

.content>.r>.two>.item {
  flex-basis: 140rpx;
  flex-shrink: 0;
  text-align: center;
}

.content>.r>.two>.sel {
  color: #F93C4C;
}

.content>.r>.list {
  height: 88vh;
  overflow-y: auto;
}

.content>.r>.list>.item {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ececec;
}

.content>.r>.list>.over{
  text-align: center;
  padding-top: 20rpx;
  color: #aaa;
  height: 200rpx;
}
