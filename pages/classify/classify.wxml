<view class="classify">
  <!-- 搜索 -->
  <view class="search">
    <view class="box shadow">
      <view class="img">
        <image src="/image//search2.png" mode="aspectFill"></image>
      </view>
      <view class="ipt">
        <input type="text" placeholder="搜索商品" placeholder-class="placeholder" />
      </view>
    </view>
  </view>

  <view class="content">
    <!-- 分类Tab -->
    <view class="tab">
      <view class="item {{tabIndex == index ? 'sel' : ''}}" wx:for="{{tab}}" wx:key="index" bindtap="checkoutTab"
        data-index="{{index}}">{{item}}</view>
    </view>

    <view class="r">
      <!-- 二级tab -->
      <view class="two">
        <view class="item {{twoIndex == index ? 'sel' : ''}}" wx:for="{{two}}" wx:key="index" bindtap="checkoutTwo"
          data-index="{{index}}">{{item}}</view>
      </view>

      <!-- 商品 -->
      <view class="list">
        <view class="item" wx:for="{{10}}">
          <goods4></goods4>
        </view>
        <view class="over">没有更多了～</view>
      </view>
    </view>
  </view>
</view>