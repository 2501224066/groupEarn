<view class="apply-promoter">
  <view class="box">

    <view class="item">
      <view class="tag">姓名</view>
      <view class="ipt">
        <input type="text" placeholder="请输入您的姓名" placeholder-class="placeholder" />
      </view>
    </view>

    <view class="item">
      <view class="tag">所在位置</view>
      <view class="ipt">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="picker" wx:if="{{region[0] != ''}}">
            {{region[0]}}，{{region[1]}}，{{region[2]}}
          </view>
          <view class="placeholder" wx:else>选择省、市、区（县）</view>
        </picker>
      </view>
    </view>

    <view class="item">
      <view class="tag">详细地址</view>
      <view class="ipt">
        <input type="text" placeholder="请输入您的详细地址" placeholder-class="placeholder" />
      </view>
    </view>

    <view class="item" style="border: none;">
      <view class="tag">上传身份证</view>
      <view class="id">
        <view class="photo">
          <view class="img">
            <image src="/image/id2.png" mode="widthFix"></image>
          </view>
          <view>身份证人像面</view>
        </view>
        <view class="photo">
          <view class="img">
            <image src="/image/id2.png" mode="widthFix"></image>
          </view>
          <view>身份证国徽面</view>
        </view>
      </view>
    </view>
  </view>


  <view class="box">
    <view class="item">
      <view class="tag">需缴纳保证金</view>
      <view class="price">0.00元</view>
    </view>
  </view>
</view>

<!-- 底部浮动栏目 -->
<view class="footer" style="height:{{iphoneFooter ? 153 : 115}}rpx">
  <view class="fbox">
    <view class="save">提交申请</view>
  </view>
</view>
<view style="height:{{iphoneFooter ? 153 : 115}}rpx;"></view>
