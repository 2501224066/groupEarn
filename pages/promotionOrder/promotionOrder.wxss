page{
  background: #f8f8f8;
}

.promotion-order {
  border-top: 20rpx solid #f8f8f8;
}

.list {
  padding: 35rpx 50rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.list>.item>.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #949494;
  font-size: 24rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #ececec;
}

.list>.item>.header>.name {
  color: #000;
  font-size: 28rpx;
}

.list>.item>.content {
  padding-top: 28rpx;
  border-bottom: 1rpx solid #ececec;
}

.list>.item>.content>.goods {
  margin-bottom: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list>.item>.content>.goods>.img {
  width: 117rpx;
  height: 117rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.list>.item>.content>.goods>.title {
  height: 117rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  margin: 0 80rpx 0 30rpx;
  font-size: 25rpx;
}

.list>.item>.content>.goods>.title>.num {
  color: #868585;
  font-size: 28rpx;
}

.list>.item>.content>.goods>.price {
  color: #DC0000;
  font-size: 28rpx;
}

.list>.item>.footer {
  font-size: 28rpx;
  margin-top: 30rpx;
  text-align: right;
}

.list>.item>.footer>span {
  color: #DC0000;
}
