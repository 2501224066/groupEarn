.lb {
  overflow: hidden;
  width: 100%;
  padding: 20rpx 3%;
  box-sizing: border-box;
  background: linear-gradient(to bottom, #f73d4c, white 60%);
}

.lb>.box {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  transform: translateY(0);
}

.search {
  background: #f73d4c;
  padding: 10rpx 25rpx;
}

.search>.box {
  display: flex;
  align-items: center;
  color: #A7A7A7;
  padding: 15rpx 20rpx;
  border-radius: 100rpx;
  background: #fff;
  font-size: 25rpx;
}

.search>.box>.img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.icon {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  height: 310rpx;
}

.icon>.item {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.icon>.item>.img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 55rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.push{
  height: 500rpx;
  margin: 40rpx 0 10rpx 0;
}

.push>.tag {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.push>.goods {
  height: 420rpx;
  padding: 0 25rpx;
  display: flex;
  overflow-x: auto;
}

.push>.goods>.item {
  height: 420rpx;
  flex-basis: 220rpx;
  flex-shrink: 0;
  padding-right: 25rpx;
}

.tab {
  height: 80rpx;
}

.tab>.box {
  display: flex;
  overflow-x: auto;
  background: #fff;
}

.tab>.fixed {
  position: fixed;
  width: 100%;
  height: 80rpx;
  left: 0;
  top: 0;
  display: flex;
  overflow-x: auto;
  z-index: 99;
  background: #fff;
}

.tab .item {
  line-height: 80rpx;
  flex-basis: 20%;
  flex-shrink: 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.tab .sel {
  color: #2b2b2b;
  border-bottom: 6rpx solid #E24444;
  font-weight: bold;
}

.list {
  padding: 12rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: #f8f8f8;
}

.list>.item {
  margin: 12rpx;
  width: 339rpx;
}
