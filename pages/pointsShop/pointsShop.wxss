.points-shop {
  padding-bottom: 2vh;
}

.lb {
  overflow: hidden;
  width: 100%;
  padding: 20rpx 3%;
  box-sizing: border-box;
  background: linear-gradient(to bottom, #f73d4c, white 60%);
}

.lb>.box {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  transform: translateY(0);
}

.search {
  background: #f73d4c;
  padding: 10rpx 25rpx;
}

.search>.box {
  display: flex;
  align-items: center;
  color: #A7A7A7;
  padding: 15rpx 20rpx;
  border-radius: 100rpx;
  background: #fff;
  font-size: 25rpx;
}

.search>.box>.img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.icon {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 30rpx 0;
}

.icon>.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon>.item>.img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 55rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.push{
  height: 500rpx;
}

.push>.tag {
  margin: 40rpx 0 20rpx 0;
  padding: 0 25rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.push>.goods {
  padding: 0 25rpx;
  display: flex;
  overflow-x: auto;
  margin-bottom: 50rpx;
}

.push>.goods>.item {
  flex-basis: 220rpx;
  flex-shrink: 0;
  padding-right: 25rpx;
}

.tab {
  height: 80rpx;
  background: #f3f3f3;
}

.tab>.box {
  display: flex;
  overflow-x: auto;
}

.tab>.fixed {
  position: fixed;
  width: 100%;
  height: 80rpx;
  left: 0;
  top: 0;
  display: flex;
  overflow-x: auto;
  z-index: 99;
  background: #f3f3f3;
}

.tab .item {
  line-height: 80rpx;
  flex-basis: 20%;
  flex-shrink: 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.tab .sel {
  color: #2b2b2b;
  border-bottom: 6rpx solid #E24444;
}

.list {
  padding: 12rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.list>.item {
  margin: 12rpx;
  width: 339rpx;
}
