<view class="edit-address">
  <view class="list">
    <view class="li">
      <view class="label">选择地址</view>
      <view class="center">
        <picker mode="multiSelector"  bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
          <text class="picker-text">{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}</text>
        </picker>
      </view>
      <view class="img">
      <image src="/image/right2.png" mode="aspectFill"></image>
      </view>
    </view>
    <view class="li">
      <view class="label">楼号/门牌号</view>
      <view class="center">
        <input type="text" placeholder="例：19号楼2001号室" bindblur="address" />
      </view>
    </view>
    <view class="li">
      <view class="label">联系人</view>
      <view class="center">
        <input type="text" placeholder="收货人姓名" bindblur="name" />
      </view>
    </view>
    <view class="li">
      <view class="label">性别</view>
      <view class="center">
        <radio color="#F74E6F" checked="{{sex == 1 ? true : false}}" bindtap="checkoutSex" data-sex="1" /> 先生
        <radio color="#F74E6F" style="margin-left: 10%" checked="{{sex == 2 ? true : false}}" bindtap="checkoutSex"
          data-sex="2" /> 女士
      </view>
    </view>
    <view class="li">
      <view class="label">手机号</view>
      <view class="center">
        <input type="number" maxlength="11" placeholder="手机号码" bindblur="phone" />
      </view>
    </view>
    <view class=" li">
      <view class="label">设为默认地址</view>
      <view class="center">
      </view>
      <view>
        <switch color="#F74E6F" checked="{{default}}" bindchange="switch1Change" bindtap="setDefault" />
      </view>
    </view>
  </view>
</view>

<!-- 底部添加按钮 -->
<view class="footer" style="height:{{iphoneFooter ? 154 : 130}}rpx">
  <view class="fbox">
    <view class="btn">保存地址</view>
  </view>
</view>
<view style="height:{{iphoneFooter ? 154 : 130}}rpx"></view>