    <!-- 头像 -->
    <view class="header">
      <view class="l">
        <view class="img">
          <image src="https://img2.woyaogexing.com/2017/10/17/556d6117294495f8!400x400_big.jpg" mode="aspectFill">
          </image>
        </view>
        <view class="name">
          <view class="text">张三丰</view>
          <view class="phone">
            <view class="img">
              <image src="/image/phone.png" mode="aspectFill"></image>
