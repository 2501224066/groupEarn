            <view>未绑定手机号码</view>
          </view>
        </view>
      </view>
      <view class="r">
        <view class="img">
          <image src="/image/set.png" mode="aspectFill"></image>
        </view>
      </view>
    </view>
    <!-- 账户 -->
    <view class="account shadow">
      <view>
        <view>2999.00</view>
        <view>账户余额</view>
      </view>
      <view>
        <view>32999</view>
        <view>积分</view>
      </view>
      <view>
        <view>134</view>
        <view>邀请人数</view>
      </view>
    </view>
  </view>

  <!-- 订单 -->
  <view class="order">
    <view class="title">
      <view>我的订单</view>
      <view class="go">全部订单</view>
    </view>
    <view class="list">
      <view class="li">
        <view class="img">
          <image src="/image/order1.png" mode="aspectFill"></image>
        </view>
        <view>代付款</view>
      </view>
      <view class="li">
        <view class="img">
          <image src="/image/order2.png" mode="aspectFill"></image>
        </view>
        <view>待发货</view>
      </view>
      <view class="li">
        <view class="img">
          <image src="/image/order3.png" mode="aspectFill"></image>
        </view>
        <view>已发货</view>
      </view>
      <view class="li">
        <view class="img">
          <image src="/image/order4.png" mode="aspectFill"></image>
        </view>
        <view>已完成</view>
      </view>
    </view>
  </view>

  <!-- 跳转 -->
  <view class="dump shadow">
    <view class="li">
      <view class="img">
        <image src="/image/flow1.png" mode="aspectFill"></image>
      </view>
      <view class="text">拼团记录</view>
      <view class="img2">
        <image src="/image/right2.png" mode="aspectFill"></image>
      </view>
    </view>
    <view class="li">
      <view class="img">
        <image src="/image/unfollow.png" mode="aspectFill"></image>
      </view>
      <view class="text">我的收藏</view>
      <view class="img2">
        <image src="/image/right2.png" mode="aspectFill"></image>
      </view>
    </view>
    <view class="li">
