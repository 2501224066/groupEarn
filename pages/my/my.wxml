        <image src="/image/address.png" mode="aspectFill"></image>
      </view>
      <view class="text">我的地址</view>
      <view class="img2">
        <image src="/image/right2.png" mode="aspectFill"></image>
      </view>
    </view>
    <view class="li">
      <view class="img">
        <image src="/image/about.png" mode="aspectFill"></image>
      </view>
      <view class="text">关于我们</view>
      <view class="img2">
