.promoter-code{
  border-top: 20rpx solid #f8f8f8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 70vh;
  font-size: 28rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 10rpx 100rpx;
  box-sizing: border-box;
  background: #fff;
  z-index: 100;
}

.footer>.fbox {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.save{
  flex: 1;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #FE4C56;
  font-weight: 300;
  border-radius: 48rpx;
}

.footer>.fbox>.text {
  flex: 1;
  color: #FE4C56;
  text-align: center;
}