page {
  background: #f8f8f8;
}

canvas {
  position: fixed;
  left: 100%;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 10rpx 100rpx;
  box-sizing: border-box;
  background: #fff;
  z-index: 9999;
}

.footer>.fbox {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer>.fbox>.save {
  flex: 1;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #FE4C56;
  font-weight: 300;
  border-radius: 48rpx;
}

.footer>.fbox>.text {
  flex: 1;
  color: #FE4C56;
  text-align: center;
}
