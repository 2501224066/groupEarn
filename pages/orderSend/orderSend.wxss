.box {
  border-top: 20rpx solid #f8f8f8;
  padding: 0 50rpx;
}

.box>.item {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ececec;
  font-size: 28rpx;
  flex-wrap: wrap;
}

.box>.item>.tag {
  min-width: 150rpx;
}

.box>.item>.ipt {
  flex: 1;
}

.box>.item>.ipt>input {
  width: 100%;
}

.box>.item .placeholder {
  color: #C8C8C8;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
  z-index: 100;
}

.footer>.fbox {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.save {
  flex: 1;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #F74E6F;
  font-weight: 300;
  border-radius: 48rpx;
}
